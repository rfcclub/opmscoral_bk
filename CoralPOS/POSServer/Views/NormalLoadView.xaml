<UserControl x:Class="POSServer.Views.NormalLoadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="57" Width="300">
    <Grid x:Name="LayoutRoot" Background="White" Height="57">
        <Border>
        <Border.Effect> <DropShadowEffect /></Border.Effect>            
            <ProgressBar Name="Progress" Value="{Binding ProgressValue}" IsIndeterminate="True" />            
        </Border>
    </Grid>
</UserControl>
