<UserControl x:Class="POSServer.Views.Stock.Inventory.StockInventoryProcessingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cal="http://www.caliburnproject.org" Width="837" Height="700">
    <Grid>
            <Grid Height="125" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="342*" />
                <ColumnDefinition Width="495*" />
            </Grid.ColumnDefinitions>
            <Button FontSize="14" FontWeight="Bold" Margin="24,6,0,39" Name="Help" HorizontalAlignment="Left" Width="80" Height="80">GIÚP ĐỠ</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,10,39" Name="Stop" Width="80" Height="80" Grid.Column="1">DỪNG</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="135,6,127,39" Name="ExcelExport" Width="80" Height="80" VerticalAlignment="Center">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Width="80" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">XUẤT RA EXCEL</TextBlock>
                </Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="21,6,0,39" Name="ProcessResult" Width="80" Height="80" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Width="68" Height="29" VerticalAlignment="Center">XỬ LÝ</TextBlock>
               </Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,259,39" Name="Delete" Width="80" Height="80" Grid.Column="1">XÓA</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,153,39" Name="Reset" Width="80" Height="80" Grid.Column="1">LÀM LẠI</Button>
        </Grid>        
            <Grid Margin="0,0,0,123">
            <Grid.RowDefinitions>
                <RowDefinition Height="204.424*"></RowDefinition>
                <RowDefinition Height="388.545*"></RowDefinition>
            </Grid.RowDefinitions>
            <DataGrid AutoGenerateColumns="False" Grid.Row="1" x:Name="StockInventoryList"  FontSize="14" Margin="0,0,184.426,33" CanUserAddRows="False" CanUserResizeColumns="False"
                      SelectedItem="{Binding Path=SelectedTempValidDTO}"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn FontSize="14" Header="STT" >
                        <DataGridTextColumn.Binding>
                            <MultiBinding Converter="{StaticResource rowNumberConverter}">
                                <Binding />
                                <Binding RelativeSource="{RelativeSource FindAncestor,AncestorType ={x:Type DataGrid}}" />
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn FontSize="14" Header="TÊN HÀNG" Width="200" Binding="{Binding ProductMaster.ProductName}" CanUserResize="False" IsReadOnly="True"/>
                    <DataGridTextColumn FontSize="14" Header="MÀU SẮC" Width="100" Binding="{Binding ProductColor.ColorName}" CanUserResize="False" IsReadOnly="True" />
                    <DataGridTextColumn FontSize="14" Header="K.CỠ" Width="70" Binding="{Binding ProductSize.SizeName}" CanUserResize="False" IsReadOnly="True"/>
                    <DataGridTextColumn FontSize="14" Header="SL MÁY" Width="70" Binding="{Binding TotalQuantity}" CanUserResize="False" IsReadOnly="True" />
                    <DataGridTextColumn FontSize="14" Header="SL THỰC" Width="70" Binding="{Binding TotalGoodQuantity}" CanUserResize="False" IsReadOnly="True" />
                    <DataGridCheckBoxColumn Header="KHỚP" Width="100*" Binding="{Binding Matched}" />
                </DataGrid.Columns>                
            </DataGrid>
            <Label FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="14,99,0,55" Name="label1" Width="97" Content="CỬA HÀNG"></Label>
            <TextBox FontSize="14" Margin="0,99,440,55" Name="Description" HorizontalAlignment="Right" Width="280" />
            <Label FontSize="14" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="14,15,0,0" Name="label3" VerticalAlignment="Top" Width="97" Content="TỪ NGÀY"></Label>
            <ComboBox Height="42.218" HorizontalAlignment="Right" Name="ProductTypeList" VerticalAlignment="Top" Width="172" FontSize="14" Margin="0,0,6,0" DisplayMemberPath="TypeName" SelectedItem="{Binding SelectedProductType}" 
                      IsEditable="False" 
                      cal:Message.Attach="[Event SelectionChanged]=[Action ProcessProductTypeChange()]" SelectionChanged="comboBox1_SelectionChanged" Grid.Row="1" />
            <ListBox Grid.Row="1" HorizontalAlignment="Right" Margin="0,48,6,33" Name="ProductMasterList" Width="172" FontSize="14" DisplayMemberPath="ProductName" />
            <Button Height="78" HorizontalAlignment="Left" Margin="316,15,0,0" Name="SearchEvaluation" VerticalAlignment="Top" Width="81" Content="TIM KIEM" />
            <TextBox Grid.Row="1" Height="32"  HorizontalAlignment="Left" Margin="407,345,0,0" VerticalAlignment="Top" Width="72" FontWeight="ExtraBold" Name="LogicalSum" TextAlignment="Left" FontSize="14" />
            <TextBox Height="32" HorizontalAlignment="Right" Margin="0,345,290,0" Name="RealSum" VerticalAlignment="Top" Width="67" Grid.Row="1" FontWeight="ExtraBold" TextAlignment="Left" FontSize="14" />
            <CheckBox Content="LOẠI DÒNG TRÙNG" Height="16" HorizontalAlignment="Left" Margin="6,177,0,0" Name="FilterDuplicate" VerticalAlignment="Top" />
            <CheckBox Content="BÙ TRƯỢT MÃ" Height="16" HorizontalAlignment="Left" Margin="147,177,0,0" Name="FilterSlidedBarcode" VerticalAlignment="Top" />
            <DatePicker Height="36" HorizontalAlignment="Left" Margin="117,15,0,0" Name="FromDate" VerticalAlignment="Top" Width="190" SelectedDate="{Binding FromDate}" FontSize="14" />
            <DatePicker Height="36" HorizontalAlignment="Left" Margin="117,57,0,0" Name="ToDate" VerticalAlignment="Top" Width="190" SelectedDate="{Binding ToDate}" FontSize="14" />
            <Label Content="ĐẾN" FontSize="14" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="56,57,0,0" Name="label2" VerticalAlignment="Top" Width="55" />
            <DataGrid AutoGenerateColumns="False" Height="138" HorizontalAlignment="Right" Margin="0,6,6,0" Name="EvaluationList" VerticalAlignment="Top" Width="425"                      
                      SelectedItem="{Binding Path=SelectedEvaluationKey,Mode=TwoWay}" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ĐỢT KIỂM TRA" Width="150" CanUserResize="False" Binding="{Binding Path=DepartmentInventoryId}" CanUserReorder="False" CanUserSort="False" IsReadOnly="True" />
                    <DataGridTextColumn Header="NGÀY" Width="100" CanUserResize="False" Binding="{Binding Path=CreateDate}" CanUserReorder="False" CanUserSort="False" IsReadOnly="True" />
                    <DataGridTextColumn Header="DIỄN GIẢI" Width="*" CanUserResize="False" Binding="{Binding Path=Description}" CanUserReorder="False" CanUserSort="False" IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="CHỌN" Height="43" HorizontalAlignment="Left" Margin="407,150,0,0" Name="SelectEvaluationDate" VerticalAlignment="Top" Width="246" />
            <Button Content="KHỚP" Height="28" HorizontalAlignment="Right" Margin="0,345,184,0" Name="Fixing" VerticalAlignment="Top" Width="100" Grid.Row="1" />
        </Grid>
    </Grid>
</UserControl>
