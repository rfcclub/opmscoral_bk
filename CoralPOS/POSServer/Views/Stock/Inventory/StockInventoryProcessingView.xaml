<UserControl x:Class="POSServer.Views.Stock.Inventory.StockInventoryProcessingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cal="http://www.caliburnproject.org" Width="837" Height="700">
    <Grid>
            <Grid Height="125" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="342*" />
                <ColumnDefinition Width="495*" />
            </Grid.ColumnDefinitions>
            <Button FontSize="14" FontWeight="Bold" Margin="24,6,0,39" Name="Help" HorizontalAlignment="Left" Width="80" Height="80">GIÚP ĐỠ</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,10,39" Name="Stop" Width="80" Height="80" Grid.Column="1">DỪNG</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="135,6,127,39" Name="ExcelExport" Width="80" Height="80" VerticalAlignment="Center">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Width="80" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">XUẤT RA EXCEL</TextBlock>
                </Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="21,6,0,39" Name="ProcessResult" Width="80" Height="80" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Width="68" Height="29" VerticalAlignment="Center">XỬ LÝ</TextBlock>
               </Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,259,39" Name="Delete" Width="80" Height="80" Grid.Column="1">XÓA</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,153,39" Name="Reset" Width="80" Height="80" Grid.Column="1">LÀM LẠI</Button>
        </Grid>        
            <Grid Margin="0,0,0,123">
            <Grid.RowDefinitions>
                <RowDefinition Height="204.424*"></RowDefinition>
                <RowDefinition Height="388.545*"></RowDefinition>
            </Grid.RowDefinitions>
            <DataGrid AutoGenerateColumns="False" Grid.Row="1" Name="StockInventoryList"  FontSize="14" Margin="0,0,184.426,33" CanUserAddRows="False" CanUserResizeColumns="False"
                      SelectedItem="{Binding SelectedTempValidDTO}"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn FontSize="14" Header="STT" >
                        <DataGridTextColumn.Binding>
                            <MultiBinding Converter="{StaticResource rowNumberConverter}">
                                <Binding />
                                <Binding RelativeSource="{RelativeSource FindAncestor,AncestorType ={x:Type DataGrid}}" />
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn FontSize="14" Header="TÊN HÀNG" Width="200" Binding="{Binding ProductMaster.ProductName}" />
                    <DataGridTextColumn FontSize="14" Header="MÀU SẮC" Width="100" Binding="{Binding ProductColor.ColorName}" />
                    <DataGridTextColumn FontSize="14" Header="K.CỠ" Width="70" Binding="{Binding ProductSize.SizeName}" />
                    <DataGridTextColumn FontSize="14" Header="SL MÁY" Width="100" Binding="{Binding TotalQuantity}" />
                    <DataGridTextColumn FontSize="14" Header="SL THỰC" Width="100" Binding="{Binding TotalGoodQuantity}" />
                    <DataGridCheckBoxColumn Header="KHỚP" Width="100*" Binding="{Binding Fixed}" />
                </DataGrid.Columns>                
            </DataGrid>
            <Label FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="11,57,0,97" Name="label1" Width="97" Content="CỬA HÀNG"></Label>
            <TextBox FontSize="14" Margin="0,57,227,97" Name="Description" HorizontalAlignment="Right" Width="493" />
            <Label FontSize="14" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="11,12,0,0" Name="label3" VerticalAlignment="Top" Width="97" Content="TỪ NGÀY"></Label>
            <ComboBox Grid.Row="1" Height="42.218" HorizontalAlignment="Right" Name="ProductTypeList" VerticalAlignment="Top" Width="172" FontSize="14" Margin="0,0,6,0" DisplayMemberPath="TypeName" SelectedItem="{Binding SelectedProductType}" 
                      IsEditable="False" 
                      cal:Message.Attach="[Event SelectionChanged]=[Action ProcessProductTypeChange()]" SelectionChanged="comboBox1_SelectionChanged" />
            <ListBox Grid.Row="1" HorizontalAlignment="Right" Margin="0,52.217,6,1.111" Name="ProductMasterList" Width="172" FontSize="14" DisplayMemberPath="ProductName" />
            <Button Content="CHỌN" Height="36" HorizontalAlignment="Left" Margin="514,15,0,0" Name="SearchEvaluation" VerticalAlignment="Top" Width="96" />
            <TextBox Grid.Row="1" Height="32" HorizontalAlignment="Left" Margin="429,345,0,0" VerticalAlignment="Top" Width="98" FontWeight="ExtraBold" Name="LogicalSum" />
            <TextBox Height="34" HorizontalAlignment="Right" Margin="0,344,197,0" Name="RealSum" VerticalAlignment="Top" Width="107" Grid.Row="1" FontWeight="ExtraBold" />
            <CheckBox Content="LOẠI DÒNG TRÙNG" Height="16" HorizontalAlignment="Left" Margin="6,177,0,0" Name="FilterDuplicate" VerticalAlignment="Top" />
            <CheckBox Content="BÙ TRƯỢT MÃ" Height="16" HorizontalAlignment="Left" Margin="147,177,0,0" Name="FilterSlidedBarcode" VerticalAlignment="Top" />
            <DatePicker Height="36" HorizontalAlignment="Left" Margin="117,15,0,0" Name="FromDate" VerticalAlignment="Top" Width="154" SelectedDate="{Binding FromDate}" FontSize="14" />
            <DatePicker Height="36" HorizontalAlignment="Left" Margin="338,15,0,0" Name="ToDate" VerticalAlignment="Top" Width="154" SelectedDate="{Binding ToDate}" FontSize="14" />
            <Label Content="ĐẾN" FontSize="14" Height="39" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="277,12,0,0" Name="label2" VerticalAlignment="Top" Width="55" />
            <DataGrid AutoGenerateColumns="False" Height="149" HorizontalAlignment="Right" Margin="0,6,6,0" Name="EvaluationList" VerticalAlignment="Top" Width="172"                      
                      SelectedItem="{Binding SelectedEvaluationKey,Mode=TwoWay}" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ĐỢT KIỂM TRA" Width="*" CanUserResize="False" Binding="{Binding CreateDate}" CanUserReorder="False" CanUserSort="False" IsReadOnly="True" />                    
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="KHỚP" Height="36" HorizontalAlignment="Left" Margin="578,157,0,0" Name="Fixing" VerticalAlignment="Top" Width="75" />
            <Button Content="CHỌN" Height="36" HorizontalAlignment="Left" Margin="702,157,0,0" Name="SelectEvaluationDate" VerticalAlignment="Top" Width="90" />
        </Grid>
    </Grid>
</UserControl>
