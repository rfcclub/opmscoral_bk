<UserControl x:Class="POSServer.Views.Stock.StockOut.StockOutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="837" Height="748">
    <Grid>
            <Grid Height="150" VerticalAlignment="Bottom">                
                <Button FontSize="14" FontWeight="Bold" Width="80" Margin="21.435,21.435,0,48.586" Name="Help" HorizontalAlignment="Left" >GIÚP ĐỠ</Button>
                <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,21.435,228.64,48.586" Name="Recreate" Width="80">TẠO LẠI</Button>
                <Button FontSize="14" FontWeight="Bold" Margin="382.972,21.435,372.969,48.586" Name="Save">LƯU</Button>
                <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,21.435,21.435,48.586" Name="Stop" Width="80">DỪNG</Button>
            </Grid>        
            <Grid Margin="0,0,0,155.031">
            <Grid.RowDefinitions>
                <RowDefinition Height="204.424*"></RowDefinition>
                <RowDefinition Height="388.545*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox FontSize="14" Height="38.583" HorizontalAlignment="Right" Margin="0,10,6,0" Name="CreateDate" VerticalAlignment="Top" Width="184.057" />
            <my:DataGrid AutoGenerateColumns="False" Grid.Row="1" Name="StockOutDetails" xmlns:my="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <my:DataGrid.Columns>
                    <my:DataGridTextColumn FontSize="14" Header="STT"  />
                    <!--Binding="{Binding Path=Product.ProductMaster.ProductType.TypeName}" SortMemberPath="Product.ProductMaster.ProductType.TypeName"-->
                    <my:DataGridTextColumn FontSize="14" Header="LOẠI" Width="100" Binding="{Binding Path=Product.ProductMaster.ProductType.TypeName}" SortMemberPath="Product.ProductMaster.ProductType.TypeName" />
                    <my:DataGridTextColumn FontSize="14" Header="TÊN SP" Width="200" Binding="{Binding Path=Product.ProductMaster.ProductName}" SortMemberPath="Product.ProductMaster.ProductName" IsReadOnly="True" />                                            
                    <my:DataGridTextColumn FontSize="14" Header="MÀU SẮC" Width="120" Binding="{Binding Path=Product.ProductColor.ColorName}" SortMemberPath="Product.ProductColor.ProductName" IsReadOnly="True" />
                    <my:DataGridTextColumn FontSize="14" Header="K.CỠ" Width="100" Binding="{Binding Path=Product.ProductSize.SizeName}" SortMemberPath="Product.ProductSize.ProductName" IsReadOnly="True" />
                    <my:DataGridTextColumn FontSize="14" Header="SL XUẤT" Width="80" Binding="{Binding Path=Quantity}" SortMemberPath="Quantity" />
                    <my:DataGridTextColumn FontSize="14" Header="SL TỒN" Width="80*" Binding="{Binding Path=StockQuantity}" SortMemberPath="StockQuantity" />                    
                </my:DataGrid.Columns>
            </my:DataGrid>
            <ComboBox Margin="0,0,405.515,56" Name="ProductMasterList" FontSize="14" AllowDrop="False" Height="38.727" VerticalAlignment="Bottom" SelectedItem="{Binding ProductMaster,Mode=OneWayToSource}" DisplayMemberPath="ProductName" HorizontalAlignment="Right" Width="285.235" IsEditable="True" IsTextSearchEnabled="True" IsTabStop="True" />
            <Button HorizontalAlignment="Right" Margin="0,0,9,55" Name="CreateByBlock" Width="182.092" FontSize="14" Height="39.727" VerticalAlignment="Bottom">XUẤT THEO LÔ</Button>
            <Button Height="39.581" HorizontalAlignment="Right" Margin="0,0,197.3,55" Name="CreateByFile" VerticalAlignment="Bottom" Width="182.425" FontSize="14">XUẤT THEO FILE</Button>
            <TextBox FontSize="14" Height="37.774" Margin="146,0,197,10" Name="ProductName" VerticalAlignment="Bottom" Text="{Binding ProductMaster.ProductName}" IsTabStop="False" IsReadOnly="True" />
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="11.429,0,0,59" Name="label2" VerticalAlignment="Bottom" Width="114.32">MÃ HÀNG</Label>
            <Label FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="9,75,0,101" Name="label1" Width="114.32">DIỄN TẢ</Label>
            <TextBox FontSize="14" Margin="145,65,197,101" Name="Description" />
            <ComboBox AllowDrop="False" FontSize="14" Height="38.727" Margin="146.251,9.856,299,0" Name="Departments" VerticalAlignment="Top" DisplayMemberPath="DepartmentName" IsTextSearchEnabled="True" />
            <Label FontSize="14" Height="28.424" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="11.429,20.159,0,0" Name="label3" VerticalAlignment="Top" Width="114.32">CỬA HÀNG</Label>
            <Button FontSize="14" Height="39.581" HorizontalAlignment="Right" Margin="0,0,9,9" Name="FixQuantityByAvailable" VerticalAlignment="Bottom" Width="182.425">SỬA SL THEO TỒN KHO</Button>
            <Button FontSize="14" HorizontalAlignment="Right" Margin="0,64,9,101" Name="Create" Width="182.092">XUẤT THEO MẶT HÀNG</Button>
        </Grid>
    </Grid>
</UserControl>
