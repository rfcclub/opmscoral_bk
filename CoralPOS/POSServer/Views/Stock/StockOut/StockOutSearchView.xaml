<UserControl x:Class="POSServer.Views.Stock.StockOut.StockOutSearchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="837" Height="700">
    <Grid>
            <Grid Height="125" VerticalAlignment="Bottom">                
                <Button FontSize="14" FontWeight="Bold" Margin="22.22,8.888,0,36.663" Name="Help" HorizontalAlignment="Left" Width="80">GIÚP ĐỠ</Button>
            <Button FontSize="14" FontWeight="Bold" Margin="387.739,8.888,368.852,36.663" Name="ViewDetail">CHI TIẾT</Button>
                <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,8.888,21.109,36.663" Name="Stop" Width="80">DỪNG</Button>
            </Grid>        
            <Grid Margin="0,0,0,123">
            <Grid.RowDefinitions>
                <RowDefinition Height="204*"></RowDefinition>
                <RowDefinition Height="373*"></RowDefinition>
            </Grid.RowDefinitions>
            <DataGrid AutoGenerateColumns="False" Grid.Row="1" Name="StockOutList"  FontSize="14" CanUserAddRows="False" CanUserDeleteRows="False" 
                         SelectionMode="Single"
                         SelectedItem="{Binding SelectedStockOut}">
                <DataGrid.Columns>
                    <DataGridTextColumn FontSize="14" Header="STT" IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <MultiBinding Converter="{StaticResource rowNumberConverter}">
                                <Binding />
                                <Binding RelativeSource="{RelativeSource FindAncestor,AncestorType ={x:Type DataGrid}}" />
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn FontSize="14" Header="MÃ LÔ" Width="150" Binding="{Binding Path=StockOutId}" SortMemberPath="StockOutId" />
                    <DataGridTextColumn FontSize="14" Header="DIỄN GIẢI" Width="250" Binding="{Binding Path=Description}"/>                                            
                    <DataGridTextColumn FontSize="14" Header="SỐ LƯỢNG" Width="150" Binding="{Binding Path=TotalQuantity}"/>
                    <DataGridTextColumn FontSize="14" Header="NGÀY NHẬP" Width="120*" Binding="{Binding Path=CreateDate}" SortMemberPath="CreateDate" />                   
                    
                </DataGrid.Columns>
            </DataGrid>
            <Button HorizontalAlignment="Right" Margin="0,6,6,0" Name="Search" Width="205.535" FontSize="14" Height="82.419" VerticalAlignment="Top">TÌM KIẾM</Button>
            <DatePicker HorizontalAlignment="Left" Margin="128.75,0,0,24.442" Name="FromDate" Width="203"  Height="38.885" VerticalAlignment="Bottom" IsEnabled="{Binding DatePick}" Text="dd/MM/yyyy" SelectedDate="{Binding FromDate}" SelectedDateFormat="Short" FontSize="16" />
            <DatePicker Margin="405.515,0,227.755,24.442" Name="ToDate" Height="37.774" VerticalAlignment="Bottom" IsEnabled="{Binding DatePick}" Text="dd/MM/yyyy" SelectedDateFormat="Short" FontSize="16" SelectedDate="{Binding ToDate}" />
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="79.75,0,0,24.442" Name="label2" VerticalAlignment="Bottom" Width="31.25">TỪ</Label>
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="6,16.583,0,0" Name="label3" VerticalAlignment="Top" Width="105">MÃ HÀNG</Label>
            <Label FontSize="14" Height="28" HorizontalContentAlignment="Right" Margin="337.744,0,0,24.442" Name="label1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="61.522">ĐẾN</Label>
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="31.1,0,0,68.882" Name="label4" VerticalAlignment="Bottom" Width="80">CỬA HÀNG</Label>
            <TextBox FontSize="14" Height="38.583" Margin="128.75,6,229.5,0" Name="ProductMasterNames" VerticalAlignment="Top" />
            <CheckBox Margin="0,0,108.535,26.692" Name="DatePick" Height="25.75" VerticalAlignment="Bottom" FontSize="14" HorizontalContentAlignment="Left" HorizontalAlignment="Right" Width="103">THEO NGÀY</CheckBox>
            <ComboBox HorizontalAlignment="Left" Margin="128.75,51.106,0,0" Name="CategoryList" Width="203" Height="38.885" VerticalAlignment="Top" SelectedItem="{Binding SelectedCategory}" DisplayMemberPath="CategoryName"/>
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="6,61.105,0,0" Name="label5" VerticalAlignment="Top" Width="105.1">PHÂN LOẠI</Label>
            <Label FontSize="14" Height="28" HorizontalContentAlignment="Right" Margin="338.855,61.105,0,0" Name="label6" VerticalAlignment="Top" HorizontalAlignment="Left" Width="61">LOẠI</Label>
            <TextBox FontSize="14" Margin="405.515,48.884,229.5,0" Name="ProductTypes" Height="38.885" VerticalAlignment="Top" />
            <ComboBox Margin="128.75,96.657,364.534,68.882" Name="Departments" SelectedItem="{Binding SelectedDepartment}" DisplayMemberPath="DepartmentName" IsEnabled="{Binding DepartmentPick}"/>
            <CheckBox FontSize="14" Height="25.75" HorizontalAlignment="Right" HorizontalContentAlignment="Left" Margin="0,0,208.868,68.882" Name="DepartmentPick" VerticalAlignment="Bottom" Width="148.874">THEO CỬA HÀNG</CheckBox>
        </Grid>
    </Grid>
</UserControl>
