<UserControl x:Class="POSServer.Views.Dialogs.ProductPropertiesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit"
    Height="286" Width="531">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330*"></ColumnDefinition>
            <ColumnDefinition Width="70*"></ColumnDefinition>            
        </Grid.ColumnDefinitions>
    <Grid ShowGridLines="False" Margin="0" Background="AliceBlue" Grid.Column="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>            
        </Grid.ColumnDefinitions>
            <my:DataGrid AutoGenerateColumns="False" Margin="18,21,6,40" Name="ProductColorList" FontSize="14" SelectedItem="{Binding SelectedProductSize}" CanUserAddRows="False" RowHeight="38" Grid.Column="0">
                <my:DataGrid.Columns>
                    <my:DataGridTextColumn FontSize="14" Header="MÃ SỐ" Binding="{Binding Path=ColorId}" SortMemberPath="SizeId" IsReadOnly="True"/>
                    <my:DataGridTextColumn FontSize="14" Header="TÊN KÍCH CỠ" Width="*" Binding="{Binding Path=ColorName}" SortMemberPath="SizeName"/>                    
                </my:DataGrid.Columns>
            </my:DataGrid>
            <my:DataGrid AutoGenerateColumns="False" Margin="18,21,6,40" Name="ProductSizeList" FontSize="14" SelectedItem="{Binding SelectedProductSize}" CanUserAddRows="False" RowHeight="38" Grid.Column="1">
                <my:DataGrid.Columns>
                    <my:DataGridTextColumn FontSize="14" Header="MÃ SỐ" Binding="{Binding Path=SizeId}" SortMemberPath="SizeId" IsReadOnly="True"/>
                    <my:DataGridTextColumn FontSize="14" Header="TÊN KÍCH CỠ" Width="*" Binding="{Binding Path=SizeName}" SortMemberPath="SizeName"/>
                </my:DataGrid.Columns>
            </my:DataGrid>
        </Grid>
        <Button Grid.Column="1" Height="51" Margin="6,5,12,0" Name="button1" VerticalAlignment="Top">CHỌN</Button>
        <Button Height="51" Margin="6,62,12,0" Name="button2" VerticalAlignment="Top" Grid.Column="1">BỎ QUA</Button>
    </Grid>
</UserControl>
