<UserControl x:Class="POSServer.Views.ProductMaster.ExProductSizeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="700" Width="837" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit">
    <Grid>
        <Grid Margin="0,0,0,149">
        <DataGrid AutoGenerateColumns="False" Margin="18,21,6,40" Name="ProductSizeList" FontSize="14" SelectedItem="{Binding SelectedProductSize}" CanUserAddRows="False" RowHeight="38">
            <DataGrid.Columns>
                <DataGridTextColumn FontSize="14" Header="MÃ SỐ" Binding="{Binding Path=SizeId}" SortMemberPath="SizeId" IsReadOnly="True"/>
                <DataGridTextColumn FontSize="14" Header="TÊN KÍCH CỠ" Width="200" Binding="{Binding Path=SizeName}" SortMemberPath="SizeName"/>
                <DataGridTextColumn FontSize="14" Header="DIỄN GIẢI" Width="*" Binding="{Binding Path=CreateId}" SortMemberPath="CreateId" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
        </Grid>
        <Grid Height="150" VerticalAlignment="Bottom">
            <Button FontSize="14" FontWeight="Bold" Margin="23,28,0,34" Name="Help" HorizontalAlignment="Left" Width="88">GIÚP ĐỠ</Button>
            <Button FontSize="14" FontWeight="Bold" Margin="408,28,341,34" Name="Delete">XÓA</Button>
            <Button FontSize="14" FontWeight="Bold" Margin="297,28,0,34" Name="Edit" HorizontalAlignment="Left" Width="87.075">SỬA</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,28,20.006,34" Name="Stop" Width="88">THOÁT</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="188,28,0,34" Name="Create" Width="88">TẠO MỚI</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,28,155,34" Name="Save" Width="88">LƯU</Button>
        </Grid>
    </Grid>
</UserControl>
