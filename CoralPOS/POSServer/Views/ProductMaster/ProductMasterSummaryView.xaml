<UserControl x:Class="POSServer.Views.ProductMaster.ProductMasterSummaryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="837" Height="748">
    <Grid>
            <Grid Height="150" VerticalAlignment="Bottom">                
                <Button FontSize="14" FontWeight="Bold" Margin="23,28,0,34" Name="Help" HorizontalAlignment="Left" Width="88">GIÚP ĐỠ</Button>
                <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,28,227,34" Name="ProductBack" Width="88">TRỞ VỀ</Button>
                <Button FontSize="14" FontWeight="Bold" Margin="385,28,364,34" Name="ProductSaveConfirm">XÁC NHẬN</Button>
                <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,28,6,34" Name="Stop" Width="88">DỪNG</Button>
            </Grid>        
            <Grid Margin="0,0,0,155.031">
            <Grid.RowDefinitions>
                <RowDefinition Height="200*"></RowDefinition>
                <RowDefinition Height="398.969*"></RowDefinition>
            </Grid.RowDefinitions>
                <TextBox FontSize="14" Height="38.583" Margin="142.25,53,199.872,0" Name="ProductName" VerticalAlignment="Top" Text="{Binding ProductMaster.ProductName}" IsReadOnly="True" />
                <TextBox FontSize="14" HorizontalAlignment="Left" Margin="142.25,98,0,58.589" Name="ProductType" Width="202.918" Text="{Binding ProductType.TypeName}" IsReadOnly="True" />
                <TextBox FontSize="14" Height="38" HorizontalAlignment="Left" Margin="142.583,0,0,14.29" Name="Category" VerticalAlignment="Bottom" Width="202.918" Text="{Binding Category.CategoryName}" IsReadOnly="True" />
            <Label Height="28" HorizontalAlignment="Left" Margin="6,19,0,0" Name="label1" VerticalAlignment="Top" Width="114.32" FontSize="14" HorizontalContentAlignment="Right">MÃ SẢN PHẨM</Label>
                <Label FontSize="14" Height="28" HorizontalAlignment="Left" Margin="6,63,0,0" Name="label2" VerticalAlignment="Top" Width="114.32" HorizontalContentAlignment="Right">TÊN SẢN PHẨM</Label>
                <Label FontSize="14" HorizontalAlignment="Left" Margin="6,0,0,59.139" Name="label3" Width="114.32" HorizontalContentAlignment="Right" Height="30.888" VerticalAlignment="Bottom">CHỦNG LOẠI</Label>
                <Label FontSize="14" Height="28" HorizontalAlignment="Left" Margin="6.333,0,0,14.29" Name="label4" VerticalAlignment="Bottom" Width="114.32" HorizontalContentAlignment="Right">NHÓM</Label>
            <TextBox FontSize="14" Height="38" Margin="407.628,8,199.872,0" Name="textBox5" VerticalAlignment="Top" IsReadOnly="True" />
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="287.874,18,0,0" Name="label5" VerticalAlignment="Top" Width="114.32">HÌNH ẢNH</Label>
                <Canvas HorizontalAlignment="Right" Margin="0,9,16,35" Name="ProductImage" Width="178" Height="178" />
                <TextBox Height="38.583" HorizontalAlignment="Left" Margin="142.25,9,0,0" Name="ProductMasterId" VerticalAlignment="Top" Width="120.036" FontSize="14" IsReadOnly="True" />
            </Grid>
        <GroupBox Header="CHI TIẾT" Margin="12,205,0,157.5" Name="groupBox1" FontSize="14" Grid.IsSharedSizeScope="True">
            <Grid HorizontalAlignment="Left" Width="813.75" Height="Auto">
                <ListBox Height="139.2" Margin="389.961,4.222,198.162,0" Name="ProductColorsList" VerticalAlignment="Top" Visibility="Hidden">                    
                </ListBox>
                <ListBox Margin="389.961,163.62,198.162,48.177" Name="ProductSizesList" Visibility="Hidden">                    
                </ListBox>
                <Button FontSize="14" FontWeight="Bold" Height="30" Margin="333.603,6,0,0" Name="button4" VerticalAlignment="Top" HorizontalAlignment="Left" Width="40" Visibility="Hidden">&lt;&lt;</Button>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,41.451,0,0" Name="button5" VerticalAlignment="Top" Width="40" Visibility="Hidden">&lt;</Button>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="332.694,78.72,0,0" Name="button7" VerticalAlignment="Top" Width="40" Visibility="Hidden">&gt;</Button>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,114.171,0,0" Name="button8" VerticalAlignment="Top" Width="40" Visibility="Hidden">&gt;&gt;</Button>
                <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="333.603,164.166,0,165.801" Name="button9" Width="40" Visibility="Hidden">&lt;&lt;</Button>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,199.53,0,0" Name="button10" VerticalAlignment="Top" Width="40" Visibility="Hidden">&lt;</Button>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,0,0,93.99" Name="button11" VerticalAlignment="Bottom" Width="40" Visibility="Hidden">&gt;</Button>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,0,0,58.539" Name="button12" VerticalAlignment="Bottom" Width="40" Visibility="Hidden">&gt;&gt;</Button>
                <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="6,1.25,0,0" Name="label6" VerticalAlignment="Top" Width="96.32">MÀU SẮC</Label>
                <Label FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="0,156.25,0,175" Name="label7" Width="102.32">KÍCH CỠ</Label>
                <Button FontSize="14" FontWeight="Bold" Height="38" Margin="124.25,0,198.162,4.287" Name="MinorDetailEnter" VerticalAlignment="Bottom">CHI TIẾT PHỤ</Button>
                <ListBox Height="138.311" Margin="124.25,5.111,195,0" Name="ProductColors" VerticalAlignment="Top" DisplayMemberPath="ColorName" />
                <ListBox Margin="124.25,164.529,195,48.177" Name="ProductSizes" DisplayMemberPath="SizeName" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
