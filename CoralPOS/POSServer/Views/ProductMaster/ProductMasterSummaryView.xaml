<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org" x:Class="POSServer.Views.ProductMaster.ProductMasterSummaryView"
    Width="837" Height="700">
    <Grid>
        <Grid Height="128" VerticalAlignment="Bottom">
            <Button FontSize="14" FontWeight="Bold" Margin="13,6,0,42" x:Name="Help" HorizontalAlignment="Left" Width="80" Content="GIÚP ĐỠ"/>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,237,42" x:Name="ProductBack" Width="80" Content="TRỞ VỀ"/>
            <Button FontSize="14" FontWeight="Bold" Margin="379,6,378,42" x:Name="ProductSaveConfirm" Content="XÁC NHẬN"/>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,16,42" x:Name="Stop" Width="80" Content="DỪNG"/>
        </Grid>
        <Grid Margin="0,0,0,155.031">
            <Grid.RowDefinitions>
                <RowDefinition Height="196*"/>
                <RowDefinition Height="348.969*"/>
            </Grid.RowDefinitions>
            <TextBox FontSize="14" Height="38.583" Margin="142.25,53,199.872,0" x:Name="ProductName" VerticalAlignment="Top" Text="{Binding ProductMaster.ProductName}" IsReadOnly="True" />
            <TextBox FontSize="14" HorizontalAlignment="Left" Margin="142.25,98,0,58.589" x:Name="ProductType" Width="202.918" Text="{Binding ProductType.TypeName}" IsReadOnly="True" />
            <TextBox FontSize="14" Height="38" HorizontalAlignment="Left" Margin="142,0,0,14.29" x:Name="Category" VerticalAlignment="Bottom" Width="202.918" Text="{Binding Category.CategoryName}" IsReadOnly="True" />
            <Label Height="28" HorizontalAlignment="Left" Margin="6,19,0,0" x:Name="label1" VerticalAlignment="Top" Width="114.32" FontSize="14" HorizontalContentAlignment="Right" Content="MÃ SẢN PHẨM"/>
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" Margin="6,63,0,0" x:Name="label2" VerticalAlignment="Top" Width="114.32" HorizontalContentAlignment="Right" Content="TÊN SẢN PHẨM"/>
            <Label FontSize="14" HorizontalAlignment="Left" Margin="6,0,0,59.139" x:Name="label3" Width="114.32" HorizontalContentAlignment="Right" Height="30.888" VerticalAlignment="Bottom" Content="CHỦNG LOẠI"/>
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" Margin="6.333,0,0,14.29" x:Name="label4" VerticalAlignment="Bottom" Width="114.32" HorizontalContentAlignment="Right" Content="NHÓM"/>
            <TextBox FontSize="14" Height="38" Margin="407.628,8,199.872,0" x:Name="textBox5" VerticalAlignment="Top" IsReadOnly="True" Visibility="Hidden" />
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="287.874,18,0,0" x:Name="label5" VerticalAlignment="Top" Width="114.32" Content="HÌNH ẢNH" Visibility="Hidden"/>
            <Canvas HorizontalAlignment="Right" Margin="0,9,16,35" x:Name="ProductImage" Width="178" Height="178" cal:Bind.AtDesignTime="True" >
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFB9D316" Offset="0"/>
                        <GradientStop Color="#FFF1F598" Offset="1"/>
                    </LinearGradientBrush>
                </Canvas.Background>
            </Canvas>
            <TextBox Height="38.583" HorizontalAlignment="Left" Margin="142.25,9,0,0" x:Name="ProductMasterId" VerticalAlignment="Top" Width="120.036" FontSize="14" IsReadOnly="True" />
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="643,0,0,0" x:Name="label5_Copy" VerticalAlignment="Top" Width="178" Content="HÌNH ẢNH SẢN PHẨM" Grid.Row="1"/>
        </Grid>
        <GroupBox Header="CHI TIẾT" Margin="12,205,0,134" x:Name="groupBox1" FontSize="14" Grid.IsSharedSizeScope="True">
            <Grid HorizontalAlignment="Left" Width="813.75" Height="Auto">
                <ListBox Height="139.2" Margin="389.961,4.222,198.162,0" x:Name="ProductColorsList" VerticalAlignment="Top" Visibility="Hidden"/>
                <ListBox Margin="389.961,163.62,198.162,48.177" x:Name="ProductSizesList" Visibility="Hidden"/>
                <Button FontSize="14" FontWeight="Bold" Height="30" Margin="333.603,6,0,0" x:Name="button4" VerticalAlignment="Top" HorizontalAlignment="Left" Width="40" Visibility="Hidden" Content="&lt;&lt;"/>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,41.451,0,0" x:Name="button5" VerticalAlignment="Top" Width="40" Visibility="Hidden" Content="&lt;"/>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="332.694,78.72,0,0" x:Name="button7" VerticalAlignment="Top" Width="40" Visibility="Hidden" Content="&gt;"/>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,114.171,0,0" x:Name="button8" VerticalAlignment="Top" Width="40" Visibility="Hidden" Content="&gt;&gt;"/>
                <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="333.603,164.166,0,165.801" x:Name="button9" Width="40" Visibility="Hidden" Content="&lt;&lt;"/>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,199.53,0,0" x:Name="button10" VerticalAlignment="Top" Width="40" Visibility="Hidden" Content="&lt;"/>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,0,0,93.99" x:Name="button11" VerticalAlignment="Bottom" Width="40" Visibility="Hidden" Content="&gt;"/>
                <Button FontSize="14" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="333.603,0,0,58.539" x:Name="button12" VerticalAlignment="Bottom" Width="40" Visibility="Hidden" Content="&gt;&gt;"/>
                <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="6,1.25,0,0" x:Name="label6" VerticalAlignment="Top" Width="96.32" Content="MÀU SẮC"/>
                <Label FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="0,156.25,0,175" x:Name="label7" Width="102.32" Content="KÍCH CỠ"/>
                <Button FontSize="14" FontWeight="Bold" Height="38" Margin="124.25,0,198.162,4.287" x:Name="MinorDetailEnter" VerticalAlignment="Bottom" Content="CHI TIẾT PHỤ"/>
                <ListBox Height="138.311" Margin="124.25,5.111,195,0" x:Name="ProductColors" VerticalAlignment="Top" DisplayMemberPath="ColorName" />
                <ListBox Margin="124.25,164.529,195,48.177" x:Name="ProductSizes" DisplayMemberPath="SizeName" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
