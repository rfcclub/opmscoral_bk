<UserControl x:Class="POSServer.Views.ProductMaster.ExProductColorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="748" Width="837" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit">
    <Grid>
        <Grid Margin="0,0,0,149">
        <my:DataGrid AutoGenerateColumns="False" Margin="12,58,12,53.328" Name="ProductColorList" FontSize="14" ItemsSource="{Binding ProductColorList,Mode=TwoWay}" RowHeight="38" SelectedItem="{Binding SelectedProductColor}">
            <my:DataGrid.Columns>
                <my:DataGridTextColumn FontSize="14" Header="MÃ SỐ" Binding="{Binding Path=ColorId}" SortMemberPath="ColorId" IsReadOnly="True"/>
                <my:DataGridTextColumn FontSize="14" Header="TÊN MÀU" Width="200" Binding="{Binding Path=ColorName}" SortMemberPath="ColorName"/>
                <my:DataGridTextColumn FontSize="14" Header="NGƯỜI TẠO" Width="*" Binding="{Binding Path=CreateId}" SortMemberPath="CreateId" IsReadOnly="True"/>
            </my:DataGrid.Columns>
        </my:DataGrid>
        </Grid>
        <Grid Height="150" VerticalAlignment="Bottom">
            <Button FontSize="14" FontWeight="Bold" Margin="23,28,0,34" Name="Help" HorizontalAlignment="Left" Width="88">GIÚP ĐỠ</Button>
            <Button FontSize="14" FontWeight="Bold" Margin="0,28,325,34" Name="Delete" HorizontalAlignment="Right" Width="88">XÓA</Button>
            <Button FontSize="14" FontWeight="Bold" Margin="313,28,0,34" Name="Edit" HorizontalAlignment="Left" Width="87.075">SỬA</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,28,20.006,34" Name="Stop" Width="88">BỎ QUA</Button>
            <Button FontSize="14" FontWeight="Bold" Margin="204,28,0,34" Name="Create" HorizontalAlignment="Left" Width="88">TẠO MỚI</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,28,149,34" Name="Save" Width="88">
                <TextBlock TextAlignment="Center" TextWrapping="Wrap">LƯU THAY ĐỔI</TextBlock></Button>
        </Grid>
    </Grid>
</UserControl>
