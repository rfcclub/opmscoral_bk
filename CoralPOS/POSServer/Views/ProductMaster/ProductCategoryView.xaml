<UserControl x:Class="POSServer.Views.ProductMaster.ProductCategoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="700" Width="837" >
    <Grid>
        <Grid Margin="0,0,0,149">
        <DataGrid AutoGenerateColumns="False" Margin="0,22,24,32" Name="ProductCategoryList" FontSize="14" SelectedItem="{Binding SelectedProductCategory}" CanUserAddRows="False" RowHeight="38">
            <DataGrid.Columns>
                <DataGridTextColumn FontSize="14" Header="MÃ SỐ" Binding="{Binding Path=CategoryId}" SortMemberPath="CategoryId" IsReadOnly="True" />
                <DataGridTextColumn FontSize="14" Header="TÊN PHÂN LOẠI" Width="200" Binding="{Binding Path=CategoryName}" SortMemberPath="CategoryName"/>
                <DataGridTextColumn FontSize="14" Header="DIỄN GIẢI" Width="*" Binding="{Binding Path=CreateId}" SortMemberPath="CreateId" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        </Grid>
        <Grid Height="150" VerticalAlignment="Bottom">
            <Button FontSize="14" FontWeight="Bold" Margin="19,6,0,64" Name="Help" HorizontalAlignment="Left" Width="80" Height="80">GIÚP ĐỠ</Button>
            <Button FontSize="14" FontWeight="Bold" Margin="417,6,340,64" Name="Delete" Width="80" Height="80">XÓA</Button>
            <Button FontSize="14" FontWeight="Bold" Margin="302,6,0,64" Name="Edit" HorizontalAlignment="Left" Width="80" Height="80">SỬA</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,24,64" Name="Stop" Width="80" Height="80">THOÁT</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="193,6,0,64" Name="Create" Width="80" Height="80">TẠO MỚI</Button>
            <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,6,150,64" Name="Save" Width="80" Height="80">LƯU</Button>
        </Grid>
    </Grid>
</UserControl>
