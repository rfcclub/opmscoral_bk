<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net"
         xmlns:tx="http://www.springframework.net/tx"> 
  
  <object id="IShellViewModel" type="POSServer.ViewModels.ShellViewModel, POSServer" singleton="true">    
  </object>

  <object id="IMainView" type="POSServer.ViewModels.MainView, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
  </object>
  <object id="ICircularLoadViewModel" type="POSServer.ViewModels.CircularLoadViewModel, POSServer" singleton="true">
    <constructor-arg ref="IShellViewModel" />
  </object>
  <object id="INormalLoadViewModel" type="POSServer.ViewModels.NormalLoadViewModel, POSServer" singleton="true">
    <constructor-arg ref="IShellViewModel" />
  </object>
  
  <object id="IProductMasterViewModel" type="POSServer.ViewModels.ProductMaster.ProductMasterViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
  </object>

  <object id="IProductMasterSummaryViewModel" type="POSServer.ViewModels.ProductMaster.ProductMasterSummaryViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
  </object>
  
  <object id="IProductTypeViewModel" type="POSServer.ViewModels.ProductMaster.ProductTypeViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
    <property name="ProductTypeLogic" ref="IProductTypeLogic" />
  </object>

  <object id="IExProductSizeViewModel" type="POSServer.ViewModels.ProductMaster.ExProductSizeViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
    <property name="ProductSizeLogic" ref="IExProductSizeLogic" />
  </object>

  <object id="IExProductColorViewModel" type="POSServer.ViewModels.ProductMaster.ExProductColorViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
    <property name="ProductColorLogic" ref="IExProductColorLogic" />
  </object>
  
  <object id="IProductCategoryViewModel" type="POSServer.ViewModels.ProductMaster.ProductCategoryViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
    <property name="CategoryLogic" ref="ICategoryLogic" />
  </object>

  <object id="IDepartmentsViewModel" type="POSServer.ViewModels.Management.DepartmentsViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
    <property name="DepartmentLogic" ref="IDepartmentLogic" />
  </object>
  
  <object id="IStockInViewModel" type="POSServer.ViewModels.Stock.StockIn.StockInViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
    <property name="ProductMasterLogic" ref="IProductMasterLogic" />
  </object>

  <object id="IStockInConfirmViewModel" type="POSServer.ViewModels.Stock.StockIn.StockInConfirmViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />

  </object>

  <object id="IProductPropertiesViewModel" type="POSServer.ViewModels.Dialogs.ProductPropertiesViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
    <property name="ProductLogic" ref="IProductLogic" />
    <property name="ProductColorLogic" ref="IExProductColorLogic" />
    <property name="ProductSizeLogic" ref="IExProductSizeLogic" />
  </object>

  <object id="IStockOutViewModel" type="POSServer.ViewModels.Stock.StockOut.StockOutViewModel, POSServer" singleton="false">
    <constructor-arg ref="IShellViewModel" />
  </object>
  
</objects>