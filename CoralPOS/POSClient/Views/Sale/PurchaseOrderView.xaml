<UserControl x:Class="POSClient.Views.Sale.PurchaseOrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="837" Height="700">
    <Grid>
            <Grid Height="135" VerticalAlignment="Bottom">                
                <Button FontSize="14" FontWeight="Bold" Margin="23,28,0,34" Name="Help" HorizontalAlignment="Left" Width="80" Height="80" >GIÚP ĐỠ</Button>
                <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,28,227,34" Name="Recreate" Width="80" Height="80">TẠO LẠI</Button>
                <Button FontSize="14" FontWeight="Bold" Margin="385,28,0,34" Name="Save" HorizontalAlignment="Left" Width="80" Height="80">LƯU</Button>
                <Button FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,28,20.006,34" Name="Stop" Width="80" Height="80">DỪNG</Button>
            </Grid>        
            <Grid Margin="0,0,0,132">
            <Grid.RowDefinitions>
                <RowDefinition Height="197*"></RowDefinition>
                <RowDefinition Height="53*"></RowDefinition>
                <RowDefinition Height="318*" />
            </Grid.RowDefinitions>
            <DataGrid AutoGenerateColumns="False" Name="PurchaseOrderList" xmlns:my="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit" FontSize="14" Margin="0,0,0,-1" Grid.Row="2">
                <DataGrid.Columns>
                    <DataGridTextColumn FontSize="14" Header="STT" />
                    <DataGridTextColumn FontSize="14" Header="LOẠI" Width="100" />
                    <DataGridTextColumn FontSize="14" Header="TÊN SP" Width="200" />                                            
                    <DataGridTextColumn FontSize="14" Header="MÀU SẮC" Width="100" />
                    <DataGridTextColumn FontSize="14" Header="K.CỠ" Width="100" />
                    <DataGridTextColumn FontSize="14" Header="SL" Width="80" />
                    <DataGridTextColumn FontSize="14" Header="GIÁ" Width="80" />                    
                    <DataGridTextColumn FontSize="14" Header="DIỄN GIẢI" Width="80*" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBox FontSize="14" Margin="127,98,0,59" Name="CustomerName" HorizontalAlignment="Left" Width="210" />
            <Label FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="7,0,0,56" Name="label2" Width="114.32" Height="37" VerticalAlignment="Bottom">TÊN KHÁCH</Label>
            <Label FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="5,55,0,0" Name="label1" Width="114.32" Height="33" VerticalAlignment="Top">SỐ HÓA ĐƠN</Label>
            <TextBox FontSize="14" Margin="126,6,0,0" Name="Barcode" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Width="151" />
            <Label FontSize="14" Height="28.424" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="5,10,0,0" Name="label3" VerticalAlignment="Top" Width="114.32">MÃ VẠCH</Label>
            <TextBox FontSize="14" Height="40" HorizontalAlignment="Left" Margin="126,52,0,0" Name="InvoiceNo" VerticalAlignment="Top" Width="211" />
            <TextBox FontSize="14" Height="40" HorizontalAlignment="Left" Margin="127,0,0,13" Name="Employee" VerticalAlignment="Bottom" Width="211" />
            <Label FontSize="14" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="7,0,0,22" Name="label4" VerticalAlignment="Bottom" Width="114.32">NHÂN VIÊN</Label>
            <TextBox FontSize="14" HorizontalAlignment="Right" Margin="0,0,13,56" Name="Discount" Width="80.575" Height="40" VerticalAlignment="Bottom" />
            <Label FontSize="14" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,0,99,56" Name="label5" Width="97" Height="37" VerticalAlignment="Bottom">CHIẾT KHẤU</Label>
            <CheckBox Height="16" HorizontalAlignment="Right" Margin="0,0,11,34" Name="HasFinancialInvoice" VerticalAlignment="Bottom" Width="185" IsChecked="True">HÓA ĐƠN TÀI CHÍNH</CheckBox>
            <TextBox FontSize="14" HorizontalAlignment="Right" Margin="0,98,212,59" Name="Payment" Width="185" />
            <Label FontSize="14" HorizontalContentAlignment="Right" Margin="344,0,403,51" Name="label6" Height="37" VerticalAlignment="Bottom">KHÁCH TRẢ</Label>
            <Label FontSize="14" Height="33" HorizontalContentAlignment="Right" Margin="343,59,403,0" Name="label7" VerticalAlignment="Top">THUẾ</Label>
            <TextBox FontSize="14" Height="40" HorizontalAlignment="Right" Margin="0,6,212,0" Name="TotalQuantity" VerticalAlignment="Top" Width="186" />
            <Label FontSize="14" Height="28.424" HorizontalContentAlignment="Right" Margin="343,10,405,0" Name="label8" VerticalAlignment="Top">TỔNG TIỀN</Label>
            <TextBox FontSize="14" Height="40" HorizontalAlignment="Left" Margin="440,52,0,0" Name="Tax" VerticalAlignment="Top" Width="184" />
            <TextBox FontSize="14" Height="40" HorizontalAlignment="Right" Margin="0,0,212,13" Name="Changes" VerticalAlignment="Bottom" Width="185" />
            <Label FontSize="14" Height="28" HorizontalContentAlignment="Right" Margin="344,0,403,25" Name="label9" VerticalAlignment="Bottom">THỐI LẠI</Label>
            <TextBox FontSize="14" Height="40" Margin="0,52,11,0" Name="Period" VerticalAlignment="Top" HorizontalAlignment="Right" Width="184" />
            <TextBox FontSize="14" Height="40" HorizontalAlignment="Right" Margin="0,6,11,0" Name="ClockTime" VerticalAlignment="Top" Width="185.425" />
            <TextBox FontSize="14" HorizontalAlignment="Left" Margin="126,7,0,6" Name="ReturnBarcode" Width="151" Grid.Row="1" />
            <Label FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="5,7,0,17" Name="label10" Width="114.32" Grid.Row="1">M.VẠCH TRẢ</Label>
            <Button Height="43" HorizontalAlignment="Left" Margin="283,2.424,0,0" Name="SearchBarcode" VerticalAlignment="Top" Width="54">TÌM</Button>
            <Button HorizontalAlignment="Left" Margin="283,4,0,6" Name="SearchReturnBarcode" Width="54" Grid.Row="1">TÌM</Button>
            <TextBox FontSize="14" HorizontalAlignment="Left" Margin="440,7,0,6" Name="ReturnInvoice" Width="119" Grid.Row="1" />
            <TextBox FontSize="14" HorizontalAlignment="Right" Margin="0,7,73,6" Name="Note" Width="122" Grid.Row="1" />
            <Label FontSize="14" HorizontalContentAlignment="Right" Margin="343,7,0,17" Name="label11" Grid.Row="1" HorizontalAlignment="Left" Width="91">HÓA ĐƠN</Label>
            <Label FontSize="14" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,7,201,17" Name="label12" Width="71" Grid.Row="1">GHI CHÚ</Label>
            <Button HorizontalAlignment="Right" Margin="0,4,13,6" Name="EnterReturnBarcode" Width="54" Grid.Row="1">NHẬP</Button>
        </Grid>
    </Grid>
</UserControl>
