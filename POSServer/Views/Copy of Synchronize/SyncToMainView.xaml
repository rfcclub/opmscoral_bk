        <Grid.RowDefinitions>
            <RowDefinition Height="181" />
            <RowDefinition Height="519*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="275*" />
            <ColumnDefinition Width="398*" />
            <ColumnDefinition Width="165*" />
        </Grid.ColumnDefinitions>
        <Button FontSize="14" FontWeight="Bold" Margin="12,12,0,14" Name="SyncToMain" TabIndex="9" HorizontalAlignment="Left" Width="250">
