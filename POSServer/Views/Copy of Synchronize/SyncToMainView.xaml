                <my:DataGridTextColumn Header="Trình bày" Width="*" />
            </my:DataGrid.Columns>
        </my:DataGrid>
        <Button Grid.Column="1" Grid.Row="1" Height="37" HorizontalAlignment="Right" Margin="0,0,0,12" Name="Quit" VerticalAlignment="Bottom" Width="149" FontSize="14">THOÁT</Button>
    </Grid>
</UserControl>
