            <GradientStop Offset="0.0" Color="{StaticResource DesignPrimaryColorLight}" />
            <GradientStop Offset="0.5" Color="White" />
            <GradientStop Offset="1.0" Color="{StaticResource DesignPrimaryColorLight}" />
