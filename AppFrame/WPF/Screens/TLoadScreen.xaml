  <!-- Wrap this in comments to make background transparent (production only) -->
    <Window.Background>
    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{StaticResource DesignSecondaryColorMedium}" />
        <GradientStop Offset="1" Color="{StaticResource DesignSecondaryColorDark}" />
    </LinearGradientBrush>
    </Window.Background>
  
