          <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.00" Color="{StaticResource DesignPrimaryColorLight}" />
            <GradientStop Offset="0.25" Color="{StaticResource DesignPrimaryColorLight}" />
            <GradientStop Offset="1.00" Color="{StaticResource DesignPrimaryColorDark}" />
          </LinearGradientBrush>
        </Label.Foreground>
        
        <Label.BitmapEffect>
          <OuterGlowBitmapEffect GlowColor="Black" GlowSize="10" Opacity="0.35" />
        </Label.BitmapEffect>
      </Label>
    </Grid>
  </Grid>

  <!-- Wrap this in comments to disable animation -->
    <Window.Triggers>
    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
      <EventTrigger.Actions>
        <BeginStoryboard>
          <Storyboard Storyboard.TargetName="ShapeRotation" Storyboard.TargetProperty="Angle" RepeatBehavior="Forever">
            <DoubleAnimation Duration="00:00:30" From="0" To="360" />
          </Storyboard>
        </BeginStoryboard>
      </EventTrigger.Actions>
    </EventTrigger>
    </Window.Triggers>

