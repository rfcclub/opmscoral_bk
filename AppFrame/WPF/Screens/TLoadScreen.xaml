    <Window.Resources>
	<!-- Taken from Tacitus source (tfcommon;component/Resources/ApplicationDesignRoot.xml -->
  
    <Color x:Key="DesignPrimaryColorLight">#FFFFE000</Color>
    <Color x:Key="DesignPrimaryColorDark">#FFFF9A00</Color>

    <Color x:Key="DesignSecondaryColorLight">#FF808080</Color>
    <Color x:Key="DesignSecondaryColorMedium">#FF505050</Color>
    <Color x:Key="DesignSecondaryColorShade">#FF404040</Color>
