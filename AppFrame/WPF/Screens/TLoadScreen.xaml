    <Grid Margin="0,300,0,0" VerticalAlignment="Center" Height="50">
      <Label Content="Loading CoralPOS" 
             HorizontalContentAlignment="Center" 
             VerticalContentAlignment="Center"
             FontSize="30" FontWeight="Bold">
             
