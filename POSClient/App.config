        <assemblyIdentity name="Spring.Core" publicKeyToken="65e474d141e25e07" culture="neutral"/>
        <bindingRedirect oldVersion="1.1.0.2" newVersion="1.3.0.20214"/>
      </dependentAssembly>      
    </assemblyBinding>



  </runtime>-->
