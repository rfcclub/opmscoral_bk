<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="AppFrame" namespace="AppFrame.Model">

<class name="PurchaseOrderDetail"
	    table="purchase_order_detail"
>

    <composite-id name="PurchaseOrderDetailPK" class="PurchaseOrderDetailPK">
        <key-property 
            name="PurchaseOrderId" 
            column="PURCHASE_ORDER_ID" 
            type="string"
            length="20">
        </key-property>
        <key-property 
            name="PurchaseOrderDetailId" 
            column="PURCHASE_ORDER_DETAIL_ID" 
            type="Int64"
            length="10">
        </key-property>
        <key-property 
            name="DepartmentId" 
            column="DEPARTMENT_ID" 
            type="Int64"
            length="10">
        </key-property>
    </composite-id>    

    <property
        name="Quantity"
        type="Int64"
        column="QUANTITY"
        length="10"
    >
    </property>
    <property
        name="Price"
        type="Int64"
        column="PRICE"
        length="10"
    >
    </property>
    <property
        name="PurchaseStatus"
        type="Int64"
        column="PURCHASE_STATUS"
        length="10"
    >
    </property>
    <property
        name="PurchaseType"
        type="Int64"
        column="PURCHASE_TYPE"
        length="10"
    >
    </property>
    <property
        name="CreateDate"
        type="DateTime"
        column="CREATE_DATE"
        length="19"
    >
    </property>
    <property
        name="CreateId"
        type="string"
        column="CREATE_ID"
        length="50"
    >
    </property>
    <property
        name="UpdateDate"
        type="DateTime"
        column="UPDATE_DATE"
        length="19"
    >
    </property>
    <property
        name="UpdateId"
        type="string"
        column="UPDATE_ID"
        length="50"
    >
    </property>
    <property
        name="ExclusiveKey"
        type="Int64"
        column="EXCLUSIVE_KEY"
        length="10"
    >
    </property>
    <property
        name="DelFlg"
        type="Int64"
        column="DEL_FLG"
        length="10"
    >
    </property>

    <!-- Associations -->
    <!-- derived association(s) for compound key -->
    <!-- bi-directional many-to-one association to PurchaseOrder -->
    <many-to-one
        name="PurchaseOrder"
	    class="PurchaseOrder"
	    update="false"
	    insert="false"
	>
    	<column name="PURCHASE_ORDER_ID" />
    	<column name="DEPARTMENT_ID" />
	</many-to-one>
	
    <!-- end of derived association(s) -->
  
    <!-- bi-directional one-to-many association to PurchaseOrderPromotion -->
    <bag
        name="PurchaseOrderPromotions"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="PURCHASE_ORDER_ID" />
            <column name="PURCHASE_ORDER_DETAIL_ID" />
            <column name="DEPARTMENT_ID" />
        </key>
        <one-to-many 
            class="PurchaseOrderPromotion"
        />
    </bag>
    <!-- bi-directional many-to-one association to Tax -->
    <many-to-one
        name="Tax"
        class="Tax"
    >
      <column name="TAX_ID" />
    </many-to-one>
    <!-- bi-directional many-to-one association to Product -->
    <many-to-one
        name="Product"
        class="Product"
        lazy ="false"
    >
      <column name="PRODUCT_ID" />
    </many-to-one>
  <many-to-one
        name="ProductMaster"
        class="ProductMaster"
        lazy ="false"
    >
    <column name="PRODUCT_MASTER_ID" />
  </many-to-one>

</class>
</hibernate-mapping>
