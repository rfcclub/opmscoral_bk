<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="AppFrame" namespace="AppFrame.Model">

<class name="Department"
	    table="department"
>

    <id
        name="DepartmentId"
        type="Int64"
        column="DEPARTMENT_ID"
    >
        <generator class="assigned" />
    </id>

    <property
        name="DepartmentName"
        type="string"
        column="DEPARTMENT_NAME"
        length="500"
    >
    </property>
    <property
        name="Address"
        type="string"
        column="ADDRESS"
        length="500"
    >
    </property>
    <property
        name="ManagerId"
        type="Int64"
        column="MANAGER_ID"
        length="10"
    >
    </property>
    <property
        name="CreateDate"
        type="DateTime"
        column="CREATE_DATE"
        length="19"
    >
    </property>
    <property
        name="CreateId"
        type="string"
        column="CREATE_ID"
        length="50"
    >
    </property>
    <property
        name="UpdateDate"
        type="DateTime"
        column="UPDATE_DATE"
        length="19"
    >
    </property>
    <property
        name="UpdateId"
        type="string"
        column="UPDATE_ID"
        length="50"
    >
    </property>
    <property
        name="ExclusiveKey"
        type="Int64"
        column="EXCLUSIVE_KEY"
        length="10"
    >
    </property>
    <property
        name="DelFlg"
        type="Int64"
        column="DEL_FLG"
        length="10"
    >
    </property>
  <property
      name="StartDate"
      type="DateTime"
      column="START_DATE"
      length="19"
    >    

  </property>

  <property
       name="Active"
       type="Int32"
       column="ACTIVE"
       length="1"
    >
  </property>
  
    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to DepartmentCost -->
    <bag
        name="DepartmentCosts"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="DEPARTMENT_ID" />
        </key>
        <one-to-many 
            class="DepartmentCost"
        />
    </bag>
    <!-- bi-directional one-to-many association to EmployeeInfo -->
    <bag
        name="Employees"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="DEPARTMENT_ID" />            
        </key>
        <one-to-many 
            class="EmployeeInfo"
        />
    </bag>
    <!-- bi-directional one-to-many association to ScheduleTemplate -->
    <bag
        name="ScheduleTemplates"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="DEPARTMENT_ID" />
        </key>
        <one-to-many 
            class="ScheduleTemplate"
        />
    </bag>

</class>
</hibernate-mapping>
