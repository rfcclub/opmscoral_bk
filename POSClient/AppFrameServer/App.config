<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging"/>
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <!-- Spring Configuration  -->
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="AppFrameServer.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
  </configSections>  
  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4Net">
        <arg key="configType" value="FILE-WATCH"/>
        <arg key="configFile" value="~/server_log4net.config"/>
      </factoryAdapter>
    </logging>
  </common>
  <log4net>
    <!-- Define some output appenders -->
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="server-log.txt" />
      <appendToFile value="true" />

      <maxSizeRollBackups value="1" />
      <maximumFileSize value="2048KB" />
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <encoding value="utf-8" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] INFO - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="ERROR" />
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="AdoNetAppender" />
    </root>
    <logger name="Spring">
      <level value="OFF"/>
    </logger>
    <logger name="NHibernate">
      <level value="OFF"/>
    </logger>
  </log4net>
  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="NoSecurity">
          <security mode="None">
            <transport protectionLevel="EncryptAndSign" />
          </security>
        </binding>
      </netTcpBinding>
      <wsDualHttpBinding>
        <binding name="httpNoSecure">
          <security mode="None" />
        </binding>
      </wsDualHttpBinding>
    </bindings>
    <client />
    <behaviors>
      <serviceBehaviors>
        <behavior name="MetadataBehavior">
          <serviceMetadata httpGetEnabled="true" httpGetUrl="http://localhost:8081/ServerService/mex" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="MetadataBehavior" name="AppFrameServer.Services.ServerService">
        <endpoint address="service" binding="netTcpBinding" bindingConfiguration="NoSecurity"
          name="TcpBinding" contract="AppFrameServer.Services.IServerService" />
        <endpoint address="service" binding="wsDualHttpBinding" bindingConfiguration="httpNoSecure"
          name="HttpBinding" contract="AppFrameServer.Services.IServerService" />
        <endpoint address="mex" binding="mexHttpBinding" name="MexBinding"
          contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:8000/ServerService/" />
            <add baseAddress="http://localhost:8081/ServerService/" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
  <userSettings>
    <AppFrameServer.Properties.Settings>
      <setting name="SubStockDB" serializeAs="String">
        <value>10.0.0.10</value>
      </setting>
      <setting name="SalePointDB" serializeAs="String">
        <value>10.0.0.7</value>
      </setting>
    </AppFrameServer.Properties.Settings>
  </userSettings>
</configuration>